{
  "manifest_version": 3,
  "name": "ChatGPT Prompt Booster (Hotkey)",
  "version": "0.1.0",
  "description": "Rewrite your ChatGPT prompt before sending (Cmd/Ctrl+Shift+\\).",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://localhost:8000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://*.openai.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
